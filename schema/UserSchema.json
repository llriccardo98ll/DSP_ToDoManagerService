{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://ToDoManager.com/userschema.json",
    "$title": "Schema of User",
    "type": "object",
    "definitions": {
        "user": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "password": {
                    "type": "string",
                    "minLength": 6,
                    "maxLength": 20
                }
            },
            "required": [
                "id",
                "email",
                "password"
            ]
        }
    },
    "properties": {
        "items": {
            "type": "array",
            "items": {
                "$ref": "#definitions/user"
            }
        }
    }
}